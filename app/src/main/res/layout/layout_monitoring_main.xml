<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.reoger.grennlife.TitleLayout.TitleLayout_moniter
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.reoger.grennlife.TitleLayout.TitleLayout_moniter>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="标题"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/monitoring_title"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_title_text"
            android:hint="请输入标题"
            android:paddingLeft="15dp"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="内容"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/monitoring_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ems="12"
            android:hint="详细描述"
            android:lines="2"
            android:padding="8dp"
            android:textSize="20sp"/>

    </LinearLayout>

    <GridView
        android:id="@+id/monitoring_photo"
        android:layout_width="290dp"
        android:layout_height="160dp"
        android:layout_marginLeft="5dp"
        android:background="#f0f000"
        android:horizontalSpacing="3dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp"></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"/>

        <EditText
            android:id="@+id/monitoring_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:hint="联系方式"
            android:inputType="number"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"/>

        <EditText
            android:id="@+id/monitoring_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:hint="举报的地点"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/monitoring_button"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_monitor_button"
            android:text="举报"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/monitoring_clear"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shape_monitor_clear"
            android:text="取消"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
