<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.reoger.grennlife.TitleLayout.TitleLayout_moniter
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.reoger.grennlife.TitleLayout.TitleLayout_moniter>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="22sp"
            android:layout_marginLeft="15dp"/>
        <EditText
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="15dp"
            android:hint="请输入标题"
            android:background="@drawable/shape_title_text"
            android:id="@+id/monitoring_title"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textSize="22sp"
            android:layout_marginLeft="15dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:lines="5"
            android:ems="12"
            android:layout_marginLeft="15dp"
            android:hint="详细描述"
            android:id="@+id/monitoring_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_lock_lock"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="11"
            android:hint="联系方式"
            android:id="@+id/monitoring_num"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:id="@+id/monitoring_location"
            android:hint="举报的地点"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>
    </LinearLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/monitoring_photo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="130dp"
        android:layout_alignBottom="@id/monitoring_photo">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_add"
            android:id="@+id/monitoring_take_photo"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="打开相册"
            android:textSize="10sp"
            android:id="@+id/monitoring_select_photo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="举报"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/shape_monitor_button"
            android:id="@+id/monitoring_button"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shape_monitor_clear"
            android:id="@+id/monitoring_clear"/>
    </LinearLayout>
</LinearLayout>
